<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/content_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/backgr"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context="com.example.kalin.graduationwork.MainActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_mainscreen"
        android:layout_width="match_parent"
        android:layout_height="48dp"></include>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/kalinsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        />

    <LinearLayout
        android:id="@+id/layout_for_no_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="@string/no_tasks_in_the_database_create_new_one_by_clicking_the_add_button"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:background="@drawable/no_event_arrow"
            />

    </LinearLayout>

</RelativeLayout>
