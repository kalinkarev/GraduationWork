<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kalin.graduationwork.NewEvent">

    <EditText
        android:id="@+id/user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter titles, people and places"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="80dp"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/user_location"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Add location"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="380dp"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/user_notification"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Add a notification"
        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="440dp"
        android:background="#c0c0c0"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:hint="Add price"
        android:layout_alignParentTop="true"
        android:layout_marginTop="450dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="500dp"
        android:background="#c0c0c0" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:text="All-day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="5"
        android:id="@+id/editText"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/switch2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="5"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText"
        android:layout_marginTop="19dp"
        android:id="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:id="@+id/editText3"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:layout_alignTop="@+id/editText2"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3"
        android:id="@+id/editText4" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="more options"
        android:layout_below="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="320dp"
        android:background="#c0c0c0" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        android:layout_alignTop="@+id/switch2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView"
        android:background="@android:drawable/ic_lock_idle_alarm" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/ic_menu_mylocation"
        android:layout_alignTop="@+id/user_location"
        android:id="@+id/imageView2"
        android:background="@android:drawable/ic_menu_mylocation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/user_location" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/stat_notify_error"
        android:layout_alignTop="@+id/user_notification"
        android:id="@+id/imageView3"
        android:background="@android:drawable/stat_notify_error"
        android:layout_alignBottom="@+id/user_notification" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_disabled"
        android:layout_marginTop="450dp"
        android:id="@+id/imageView4"
        android:background="@drawable/common_google_signin_btn_icon_dark_disabled" />


</RelativeLayout>