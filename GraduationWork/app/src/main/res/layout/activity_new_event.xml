<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalin.graduationwork.fragments.AddFragment">

    <include
        android:id="@+id/toolbar_for_add_event"
        layout="@layout/toolbar_for_add_event"
        ></include>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/clock" />

        <ImageView
            android:id="@+id/imageViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/location" />

        <ImageView
            android:id="@+id/imageViewNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bell" />

        <ImageView
            android:id="@+id/imageViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/price" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        >

    <EditText
        android:id="@+id/user_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter titles, people and places"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="80dp"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/user_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add location"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="380dp"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/user_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add a notification"
        android:layout_alignParentTop="true"
        android:layout_marginTop="390dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="440dp"
        android:background="#c0c0c0"/>

    <EditText
        android:id="@+id/user_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add price"
        android:layout_alignParentTop="true"
        android:layout_marginTop="450dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="500dp"
        android:background="#c0c0c0" />

    <Switch
        android:id="@+id/switch_for_allday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All-day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="105dp"/>

    <EditText
        android:id="@+id/editText_startTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="5"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/switch_for_allday"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText_finishTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="5"
        android:layout_below="@+id/editText_startTime"
        android:layout_alignLeft="@+id/editText_startTime"
        android:layout_alignStart="@+id/editText_startTime"
        android:layout_marginTop="19dp" />

    <EditText
        android:id="@+id/editText_day_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:layout_alignBaseline="@+id/editText_startTime"
        android:layout_alignBottom="@+id/editText_startTime"
        android:layout_alignLeft="@+id/switch_for_allday"
        android:layout_alignStart="@+id/switch_for_allday" />

    <EditText
        android:id="@+id/editText_day_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:layout_alignTop="@+id/editText_finishTime"
        android:layout_alignRight="@+id/editText_day_start"
        android:layout_alignEnd="@+id/editText_day_start" />

    <EditText
        android:id="@+id/more_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="more options"
        android:layout_below="@+id/editText_finishTime"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentEnd="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="320dp"
        android:background="#c0c0c0" />

    </RelativeLayout>

</RelativeLayout>
</ScrollView>