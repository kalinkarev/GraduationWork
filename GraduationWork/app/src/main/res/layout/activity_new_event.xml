<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_new_event"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kalin.graduationwork.fragments.AddFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_addfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_below="@+id/toolbar"
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter titles, people and places"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/editTextTitle"
        android:background="@color/colorAlmostWhite2ForEvents" />

    <RelativeLayout
        android:layout_below="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp" >

        <Switch
            android:id="@+id/switchForDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="All-day"
            />

        <TextView
            android:id="@+id/textViewForStartDate"
            android:layout_below="@+id/switchForDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewForFinishDate"
            android:layout_below="@+id/textViewForStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/textViewForFinishDate"
            android:background="@color/colorAlmostWhite2ForEvents" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_below="@+id/textViewForFinishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add location"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/editTextLocation"
            android:background="@color/colorAlmostWhite2ForEvents" />

        <EditText
            android:id="@+id/editTextNotification"
            android:layout_below="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a notification" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/editTextNotification"
            android:background="@color/colorAlmostWhite2ForEvents" />

        <EditText
            android:id="@+id/editTextPrice"
            android:layout_below="@+id/editTextNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add price" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/editTextPrice"
            android:background="@color/colorAlmostWhite2ForEvents" />

        <EditText
            android:id="@+id/editTextColor"
            android:layout_below="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Default color" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/editTextTitle"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageViewClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/clock"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_below="@+id/imageViewClock"
            android:id="@+id/imageViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/location"
            android:layout_marginTop="100dp"/>

        <ImageView
            android:layout_below="@+id/imageViewLocation"
            android:id="@+id/imageViewNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bell"
            android:layout_marginTop="25dp"/>

        <ImageView
            android:layout_below="@+id/imageViewNotification"
            android:id="@+id/imageViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/price"
            android:layout_marginTop="23dp"/>

        <ImageView
            android:layout_below="@+id/imageViewPrice"
            android:id="@+id/imageViewColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>
</ScrollView>